<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateActivity">

    <TextView
        android:id="@+id/AjoutTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:text="Ajout Joueur GDFR"
        android:textColor="@android:color/holo_blue_dark"
        android:textSize="34sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.515"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textDesc1"
        android:layout_width="337dp"
        android:layout_height="80dp"
        android:layout_marginTop="48dp"
        android:text="Please put the name of the GD Player that belong to the French Community of the Geometry Dash Player."
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AjoutTitle" />

    <TextView
        android:id="@+id/textDesc2"
        android:layout_width="337dp"
        android:layout_height="80dp"
        android:layout_marginTop="144dp"
        android:text="The player will be added in the GDFR database, with its GD Data if it can be found by the algorithm"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AjoutTitle" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="335dp"
        android:layout_height="134dp"
        android:layout_marginTop="275dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.513"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/AjoutTitle">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView5"
                android:layout_width="442dp"
                android:layout_height="106dp"
                android:layout_marginLeft="1dp"
                android:layout_weight="1"
                android:text="Name :"
                android:textSize="30sp" />

            <EditText
                android:id="@+id/playerUsername"
                android:layout_width="561dp"
                android:layout_height="63dp"
                android:layout_weight="1"
                android:ems="10"
                android:inputType="textPersonName"
                tools:ignore="SpeakableTextPresentCheck" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/addTrigger"
        android:layout_width="286dp"
        android:layout_height="63dp"
        android:layout_marginBottom="112dp"
        android:text="Add GDFR Player"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>